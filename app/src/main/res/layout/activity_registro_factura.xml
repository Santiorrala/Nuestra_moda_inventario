<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:visibility="visible"
    tools:context=".Registro_factura">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <TextView
            android:id="@+id/textView5"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#76C1AE"
            android:gravity="center_horizontal"
            android:text="Registrar factura"
            android:textColor="@color/black"
            android:textSize="30sp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center"
            android:orientation="vertical"
            android:background="#E9FCED">

            <ImageView
                android:id="@+id/imageView4"
                android:layout_width="277dp"
                android:layout_height="155dp"
                android:layout_gravity="center"
                app:srcCompat="@drawable/facnew" />

            <LinearLayout
                android:layout_width="265dp"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/textView6"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:fontFamily="sans-serif-black"
                    android:gravity="center_horizontal"
                    android:text="NuestraModa"
                    android:textColor="@color/black"
                    android:textSize="25sp"
                    android:textStyle="bold" />

                <EditText
                    android:id="@+id/textNombreF"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:backgroundTint="#76C1AE"
                    android:ems="10"
                    android:foregroundTint="@color/black"
                    android:hint="Nombre"
                    android:inputType="text"
                    android:shadowColor="@color/black"
                    android:textColor="@color/black"
                    android:textColorHighlight="@color/black"
                    android:textColorHint="@color/black"
                    android:textColorLink="@color/black" />

                <EditText
                    android:id="@+id/textApellidoF"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:backgroundTint="#76C1AE"
                    android:ems="10"
                    android:hint="Apellido"
                    android:inputType="text"
                    android:textColor="@color/black"
                    android:textColorHighlight="@color/black"
                    android:textColorHint="@color/black"
                    android:textColorLink="@color/black" />

                <EditText
                    android:id="@+id/textEmailF"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:backgroundTint="#76C1AE"
                    android:ems="10"
                    android:hint="Correo Electronico"
                    android:inputType="text"
                    android:shadowColor="@color/black"
                    android:textColor="@color/black"
                    android:textColorHighlight="@color/black"
                    android:textColorHint="@color/black"
                    android:textColorLink="@color/black" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/textView9"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Producto:"
                        android:textColor="@color/black"
                        android:textColorHighlight="@color/black"
                        android:textColorLink="@color/black" />

                    <Spinner
                        android:id="@+id/spinnerProducto"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:backgroundTint="@color/black"
                        android:foregroundTint="@color/black" />
                </LinearLayout>

                <EditText
                    android:id="@+id/textCantidadF"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:backgroundTint="#76C1AE"
                    android:ems="10"
                    android:hint="Cantidad"
                    android:inputType="number"
                    android:textColor="@color/black"
                    android:textColorHighlight="@color/black"
                    android:textColorHint="@color/black"
                    android:textColorLink="@color/black" />


                <Button
                    android:id="@+id/btnRegistroF"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:backgroundTint="#76C1AE"
                    android:text="Generar"
                    android:textStyle="bold" />

                <Button
                    android:id="@+id/btnBorrarF"
                    android:layout_width="268dp"
                    android:layout_height="wrap_content"
                    android:backgroundTint="#76C1AE"
                    android:text="Nueva factura"
                    android:textStyle="bold" />
            </LinearLayout>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="58dp"
                android:gravity="center"
                android:text="Total a pagar:"
                android:textColor="@color/black"
                android:textColorHighlight="@color/black"
                android:textColorHint="@color/black"
                android:textColorLink="@color/black"
                android:textStyle="bold" />

            <EditText
                android:id="@+id/textTotalPagar"
                android:layout_width="235dp"
                android:layout_height="92dp"
                android:backgroundTint="@android:color/transparent"
                android:ems="10"
                android:fontFamily="sans-serif-black"
                android:gravity="center_horizontal"
                android:inputType="number"
                android:shadowColor="#7C3434"
                android:textColor="@color/black"
                android:textSize="66sp"
                android:visibility="visible" />

        </LinearLayout>

    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>
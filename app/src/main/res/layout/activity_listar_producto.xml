<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_gravity="top"
    android:background="#88139C"
    android:backgroundTint="#185A78"
    tools:context=".Listar_Producto">

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:background="#E9FCED"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <androidx.appcompat.widget.Toolbar
                android:id="@+id/toolbar2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="#76C1AE"
                android:minHeight="?attr/actionBarSize"
                android:textColor="@color/black"
                android:textColorHint="@color/black"
                android:theme="?attr/actionBarTheme"
                app:subtitleTextColor="@color/black"
                app:title="Lista de productos"
                app:titleTextColor="@color/black" />

        </LinearLayout>

        <ListView
            android:id="@+id/listViewProductos"
            android:layout_width="match_parent"
            android:layout_height="844dp"
            android:layout_gravity="top"
            android:layout_marginTop="12dp"
            android:background="#E9FCED"
            android:backgroundTint="#E9FCED"
            android:cacheColorHint="#AE1616"
            android:divider="#76C1AE"
            android:dividerHeight="1.0sp"
            android:scrollbars="vertical"
            android:textColor="@color/proyecto"
            android:textStyle="bold"
            app:srcCompat="@android:drawable/btn_star_big_on"
            app:titleTextColor="@color/purple_700" />


    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>